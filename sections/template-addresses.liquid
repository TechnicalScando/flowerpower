{{ 'template-addresses.css' | asset_url | stylesheet_tag }}
<div class="addressContainer">
    <div class="accountBar">
        <h3>Account</h3>
        <a href="{{ shop.url }}">Log Out</a>
        <a href="{{ shop.url }}">Return to account details</a>
    </div>

    <div class="addressContent">
        <a href="{{ shop.url }} " class="button  width100">
            <p class="buttontxt ">add a new address</p>
        </a>
        <h3>Addresses</h3>
        {% for address in customer.addresses %}
            <div class="addressBlock">
                {% if forloop.index == 1 %}
                    <h3>Default</h3>
                {% else %}
                    <h3>Alternative</h3>
                {% endif %}
                <p class="body">{{ address.first_name }}
                    {{ address.last_name }}</p>
                <p class="body">{{ address.street }}</p>
                <p class="body">{{ address.city }}
                    {{ address.province_code }}
                    {{ address.zip }}
                </p>
                <p class="body">{{ address.country }}</p>
                <div class="addressButtons">
                    <a href="{{ shop.url }} " class="button secondary width100">
                        <p class="buttontxt secondary ">edit</p>
                    </a>
                    <a href="{{ shop.url }} " class="button secondary width100">
                        <p class="buttontxt secondary ">delete</p>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>


