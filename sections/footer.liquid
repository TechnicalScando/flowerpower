{{ 'footer.css' | asset_url | stylesheet_tag }}

<div class="footer">
    <div class="footerDetails">
        <h3>
            About the store
        </h3>
        <h4 class="strong">
            This is a theme footer
        </h4>
        {% if section.settings.description != blank %}
            <p class="body">{{section.settings.description}}</p>
        {% else %}
            <p class="body">
                Lorem ipsum dolor sit amet, 
                                                                                            consectetur adipiscing elit. 
                                                                                            Pellentesque sit amet consequat nulla. 
                                                                                            Pellentesque euismod viverra ex, 
                                                                                            id hendrerit tortor porta ac.
            </p>
        {% endif %}

    </div>
    {% if section.settings.socialEnable %}
        <div class="socialBar">
            {% render 'socialBar' %}
        </div>
    {% endif %}
    <div class="footerMenu">
        {% for link in linklists.footer.links %}
            {% assign child_list_handle = link.title | handleize %}
            {% if linklists[child_list_handle].links != blank %}
                <a href="{{ link.url }}">{{ link.title }}</a>
                [
                {% for childlink in linklists[child_list_handle].links %}
                    <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                {% endfor %}
                ]
            {% else %}
                <a href="{{ link.url }}">{{ link.title }}</a>
            {% endif %}
        {% endfor %}
    </div>
    <div class="footerSubscribe">
        <h3>
            Join the club!
        </h3>
        <h4 class="subtitle">
            For exclusive offers,giveaways, and plant tips!
        </h4>
        <div class="textField">
            wow this is a text field
        </div>
    </div>
</div>

{% schema %}
{
    "settings": [
    {
       "type": "textarea",
       "id": "description",
       "label": "Description"
    },
    {
       "type": "checkbox",
       "id": "socialEnable",
       "label": "Social Media Bar",
       "default": true
    }
    ]
}
{% endschema %}